{
  parser: "babel-eslint",
  "globals": {
      "process": true
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
  },
  "rules": {
    "strict":0,
    "no-unused-vars": 0,
    "no-console": 1,
    "semi": ["error", "always"],
    "allowImportExportEverywhere": false,
    "comma-dangle": [1, { //when to use the last comma
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore",
    }],
    "react/jsx-indent": ["error", 4],
    "react/prop-types": [2]
  },
  "settings": {
    "react": {
      "version": "16.4.1", // React version, default to the latest React stable release
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
